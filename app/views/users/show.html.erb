<p id="notice"><%= notice %></p>

<h1>Listing <%= @user.name %>'s payees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Recurring</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payees.each do |payee| %>
      <tr>
        <td><%= payee.name %></td>
        <td><%= payee.recurring %></td>
        <td><%= payee.user.name %></td>
        <td><%= link_to 'Show', payee %></td>
        <td><%= link_to 'Edit', edit_payee_path(payee) %></td>
        <td><%= link_to 'Destroy', payee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to "New Payee", "/users/#{@user.id}/payees/new" %>
