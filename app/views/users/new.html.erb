<%= form_for @user do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :sms %>
    <%= form.check_box :sms_remind? %>
  </div>
  <div>
    <%= form.label :phone %>
    <%= form.telephone_field :phone %>
  </div>
  <div>
    <%= form.submit "Sign up" %>
  </div>
<% end %>
